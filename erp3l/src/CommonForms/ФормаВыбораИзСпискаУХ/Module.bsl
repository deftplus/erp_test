
&НаКлиенте
Процедура ВыбратьЗначение(Команда)
	ТекДанные = Элементы.Список.ТекущиеДанные;
	Если ТекДанные <> Неопределено Тогда
		ЭтаФорма.Закрыть(ТекДанные.Значение);
	Иначе
		ТекстСообщения = НСтр("ru = 'Выберите нужный вариант'");
		ОбщегоНазначенияУХ.СообщитьОбОшибке(ТекстСообщения);
	КонецЕсли;
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	// Параметр Список.
	Для Каждого ТекСписок Из Параметры.Список Цикл
		Список.Добавить(ТекСписок.Значение, ТекСписок.Представление);
	КонецЦикла;	
	// Параметр Заголовок.
	Если ЗначениеЗаполнено(Параметры.Заголовок) Тогда
		ЭтаФорма.Заголовок = Параметры.Заголовок;
	Иначе
		ЭтаФорма.Заголовок = НСтр("ru = 'Выберите значение'");
	КонецЕсли;
КонецПроцедуры

