		//Выберем используемые строки
		ЗаполнитьСоставСтрок(Бланк,,,ГруппаСтрок);
	КонецЕсли;
	
	Если  ЗаполнитьПоказатели Тогда
		//Выберем  используемые ресурсы
		ЗаполнитьСоставПоказателей(Бланк);
	КонецЕсли;
	
