		КонецЕсли;
		нКС = ТаблицаКолонкиИСтроки.Добавить();
		ЗаполнитьЗначенияСвойств(нКС,СтрокаАналитики);
		нКС.Код = СтрЗаменить(СтрокаАналитики.Код,"Фильтр_","");
		нКС.Размещение = "К";
