	Запрос.УстановитьПараметр("СтатусПоказателя",СостояниеОбъекта);
	Запрос.УстановитьПараметр("Организация",Организация);
	Запрос.УстановитьПараметр("Проект",Проект);
	
	Результат = Запрос.Выполнить().Выгрузить();
	
	Возврат Результат;	
	
