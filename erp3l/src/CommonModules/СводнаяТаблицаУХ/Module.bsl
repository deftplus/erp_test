		//Парсим отбираемые аналитики
		Если  НЕ СтрОтбор.ОтборИсточник = Нстр("ru = '<Без отбора>'") Тогда	
			СтруктураПараметров.Вставить(КодПоля,СтрОтбор.ИсточникЗначенияКопирования);					
		КонецЕсли;	
		
