		   ТекстЗапроса = ТекстЗапроса+ СтрокаСоединения;
			      
	   КонецЦикла;
	   
	   ТекстПолей = "";
	   Для Каждого Стр Из СписокПредставленийАналитик Цикл
		   ТекстПолей = ТекстПолей+"
		   |"+Стр.Значение+",";
	   КонецЦикла;
	   
	  ТекстЗапроса =  СтрЗаменить(ТекстЗапроса,"#ТекстПолейАналитик",ТекстПолей);
	  
	  ТекстУсловия = "
