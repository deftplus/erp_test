#Область ПрограммныйИнтерфейс

Процедура УстановитьЗаголовокФормы(Форма) Экспорт
	
	Объект = Форма.Объект;
	
	ТекстЗаголовка = "";
	
	Если ЗначениеЗаполнено(Объект.Ссылка) Тогда
		ТекстЗаголовка = Строка(Объект.Ссылка);
		Если ЗначениеЗаполнено(Объект.ВидФинансовогоИнструмента) Тогда
			ТекстЗаголовка = ТекстЗаголовка + СтрШаблон(" (%1)", Объект.ВидФинансовогоИнструмента);
		КонецЕсли;
	Иначе
		ТекстЗаголовка = ?(ЗначениеЗаполнено(Объект.ВидФинансовогоИнструмента), Строка(Объект.ВидФинансовогоИнструмента), НСтр("ru = 'Ценная бумага'")) + НСтр("ru = ' (создание)'");
	КонецЕсли;
	
	Форма.Заголовок = ТекстЗаголовка;

КонецПроцедуры

