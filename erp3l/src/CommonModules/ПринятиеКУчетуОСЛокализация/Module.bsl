	Запрос.УстановитьПараметр("Дата", Объект.Дата);
	Запрос.УстановитьПараметр("СписокОС", СписокОС);
	
	УстановитьПривилегированныйРежим(Истина);
	Результат = Запрос.Выполнить();
	УстановитьПривилегированныйРежим(Ложь);

	Выборка = Результат.Выбрать();
	
	Если Выборка.Следующий() Тогда
		
		Объект.АмортизационнаяГруппа = Перечисления.АмортизационныеГруппы.ПерваяГруппа;
		
		Если Объект.ОтражатьВУпрУчете Тогда
			Объект.СрокИспользованияУУ = Выборка.СрокЭксплуатации;
			Объект.СтатьяРасходовУУ = Выборка.СтатьяРасходов;
		КонецЕсли;
		
		Если Объект.ОтражатьВБУ Тогда
