	СтруктураПараметров.Вставить("ФизическиеЛица", ФизическиеЛица);
	
	ПодготовитьДанныеВедомостей(МенеджерВременныхТаблиц, СтруктураПараметров);
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	Запрос.Текст =
	"ВЫБРАТЬ
