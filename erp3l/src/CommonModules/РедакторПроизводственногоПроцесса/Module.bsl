	ЭлементЗначениеМакс = Элементы[СоответствиеЭлементов.ДопРеквизитыЗначениеМакс]; // ПолеФормы
	ЭлементДопРеквизиты = Элементы[СоответствиеЭлементов.ДопРеквизиты];             // ТаблицаФормы
	
