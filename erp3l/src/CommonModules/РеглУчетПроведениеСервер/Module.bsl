					+ РезультатОтражения.ОтраженоВУчете.Количество(); 
					
				РезультатВозврата.КоличествоНеУказаныСчетаУчета = 
					РезультатВозврата.КоличествоНеУказаныСчетаУчета 
					+ РезультатОтражения.НеУказаныСчетаУчета.Количество(); 
					
				РезультатВозврата.КоличествоОшибкиПриОтражении = 
