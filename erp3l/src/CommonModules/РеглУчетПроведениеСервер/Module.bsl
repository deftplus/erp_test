	Запрос.УстановитьПараметр("ВсеДокументы",     ?(МассивСсылок = Неопределено, Истина, Ложь));
	
	ДобавитьВЗапросФильтрОтраженияВРеглУчете(Запрос.Текст, "Данные.Регистратор");
	Возврат Запрос.Выполнить().Выбрать();
	
