// Обновляет отображение поля Имя родителя на форме.
&НаСервере
Процедура ОбновитьОтображениеИмениРодителя()
	Элементы.ИмяРодителяПредставление.Заголовок = Строка(ОтборНазначение);
	ИмяРодителяПредставление = УправлениеШаблонамиЗаполненияУХ.ПолучитьПредставлениеМетаданногоРодителя(ОтборИмяРодителя, ОтборНазначение); 
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	// Отбоработаем параметры формы.
	Если Параметры.Свойство("Отбор") Тогда
		// Отбор по Назначению.
		Если Параметры.Отбор.Свойство("Назначение") Тогда
			ОтборНазначение = Параметры.Отбор.Назначение;
		Иначе
			// Не выставляем отбор по Назначению.
		КонецЕсли;
		// Отбор по Имени объекта.
		Если Параметры.Отбор.Свойство("ИмяРодителя") Тогда
			ОтборИмяРодителя = Параметры.Отбор.ИмяРодителя;
		Иначе
			// Не выставляем отбор по Имени объекта.
		КонецЕсли;
	Иначе
		// Отбор не выставлен.
	КонецЕсли;
	ОбновитьОтображениеИмениРодителя();
КонецПроцедуры
