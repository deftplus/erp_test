&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Список.Параметры.УстановитьЗначениеПараметра("Организация", Справочники.Организации.ПустаяСсылка());
	
	Если Параметры.Свойство("Отбор") Тогда
		
		Если Параметры.Отбор.Свойство("Организация") Тогда
			Организация = Параметры.Отбор.Организация;
			Список.Параметры.УстановитьЗначениеПараметра("Организация", Организация);
			Параметры.Отбор.Удалить("Организация");
		КонецЕсли;
		
		Если Параметры.Отбор.Свойство("Дата") Тогда
			
			Если Параметры.Отбор.Свойство("Документ") Тогда
				Период = Новый Граница(Новый МоментВремени(Параметры.Отбор.Дата, Параметры.Отбор.Документ), ВидГраницы.Исключая);
			Иначе 
				Период = Новый Граница(Параметры.Отбор.Дата, ВидГраницы.Исключая);
			КонецЕсли;
						
			Дата = Параметры.Отбор.Дата;
			Список.Параметры.УстановитьЗначениеПараметра("Период", Период);
					
		Иначе 
			
			Дата = ТекущаяДата();
			Список.Параметры.УстановитьЗначениеПараметра("Период", ТекущаяДата());
			
		КонецЕсли;
		
		Если Параметры.Отбор.Свойство("ЭтоВыданныйВексель") Тогда
			Если Параметры.Отбор.ЭтоВыданныйВексель Тогда
				Заголовок = НСтр("ru = 'Выданные векселя'");
			Иначе
				Заголовок = НСтр("ru = 'Полученные векселя'");
			КонецЕсли;
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

