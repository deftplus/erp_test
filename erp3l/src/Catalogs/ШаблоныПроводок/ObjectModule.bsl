Процедура ПередЗаписью(Отказ)
	
	ТекстНаименования = НСтр("ru = 'Дт: %1, Кт: %2'");
	Наименование = СтрШаблон(ТекстНаименования,
		                        СчетДт,
		                        СчетКт);

								
								
	Если СпособПолучения=Перечисления.СпособыПолученияОперандов.ВнутренниеДанныеДокументы Тогда
		
		Если НЕ ЗначениеЗаполнено(ТабличнаяЧастьБД) Тогда
			
			ТекстПредставления = НСтр("ru = 'Шапка документа'");
			
		Иначе
			
			ТекстПредставления = НСтр("ru = 'ТЧ ""%1""'");
			ТекстПредставления = СтрШаблон(ТекстПредставления,ТабличнаяЧастьБД);
			
		КонецЕсли;
		
	ИначеЕсли ТипЗнч(РегистрБД)=Тип("СправочникСсылка.РегистрыБухгалтерииБД") Тогда
		
		ТекстПредставления = НСтр("ru = 'РБ %1, счет Дт: ""%2"", счет Кт: ""%3""'");
		ТекстПредставления = СтрШаблон(ТекстПредставления,РегистрБД,СчетДт,СчетКт);
		
	ИначеЕсли ТипЗнч(РегистрБД)=Тип("СправочникСсылка.РегистрыНакопленияБД") Тогда
		
		ТекстПредставления = НСтр("ru = 'РН %1'");
		ТекстПредставления = СтрШаблон(ТекстПредставления,РегистрБД);
		
	ИначеЕсли ТипЗнч(РегистрБД)=Тип("СправочникСсылка.РегистрыСведенийБД") Тогда
		
		ТекстПредставления = НСтр("ru = 'РС %1'");
		ТекстПредставления = СтрШаблон(ТекстПредставления,РегистрБД);
		
	КонецЕсли;
	
	ПредставлениеИсточника=ТекстПредставления;
		
