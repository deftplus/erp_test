		Для Индекс = 0 По Операции.Количество() - 1 Цикл
			
			Операция = Операции[Индекс].Операция; // СправочникСсылка.ТехнологическиеОперации
			
			НоваяСтрока = КоллекцияЭлементов.Добавить();
			НоваяСтрока.Ссылка          = Операция;
			НоваяСтрока.Наименование    = Операция.Наименование;
			НоваяСтрока.Номер           = Операция.НомерОперации;
			НоваяСтрока.НомерСледующего = Операция.НомерСледующейОперации;
			НоваяСтрока.РабочийЦентр    = Операция.РабочийЦентр;
			НоваяСтрока.ТолькоПросмотр  = Истина;
			НоваяСтрока.ВидЭлемента     = ПроизводственныйПроцессВидЭлементаПоСсылке(НоваяСтрока.Ссылка);
			РедакторПроизводственногоПроцессаКлиентСервер.УстановитьКартинкуЭлемента(НоваяСтрока);
			
		КонецЦикла;
		
	КонецЕсли;
	
	Элементы.ПроизводственныйПроцесс.ТекущаяСтрока = ИдентификаторСтроки;
	ПроизводственныйПроцессСохранитьКэшЭлементов(КэшЭлементов);
	
