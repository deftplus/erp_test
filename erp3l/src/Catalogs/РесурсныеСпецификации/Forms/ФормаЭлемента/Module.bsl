			ДанныеСтроки = Объект[ИмяТЧ].НайтиПоИдентификатору(ИдентификаторСтроки);
			
			ДанныеСтроки[СвойстваЭлементов["Редактирование"]]              = ВыбранноеЗначение.Ссылка;
			ДанныеСтроки[СвойстваЭлементов["РедактированиеПредставление"]] = ВыбранноеЗначение.Наименование;
			
			//++ НЕ УТКА
			Если ВыбранноеЗначение.Режим = "Этап" Тогда
				ДанныеСтроки.ОперацияРедактирование              = Неопределено;
				ДанныеСтроки.ОперацияРедактированиеПредставление = "";
			КонецЕсли;
			//-- НЕ УТКА
			
		КонецЦикла;
		
		Если ИмяТЧ = "МатериалыИУслуги" Тогда
			
			ОбработатьИзменениеЭтапаМатериалыИУслуги(ВыделенныеСтроки);
			
		КонецЕсли;
		
	КонецЕсли;
	
