		КэшЭлемента = КэшЭлементов.Получить(СтрокаОперация.Ссылка);
		Если КэшЭлемента = Неопределено Тогда
			НоваяСтрока.Ссылка        = СтрокаОперация.Ссылка;
			НоваяСтрока.НомерОперации = СтрокаОперация.Номер;
