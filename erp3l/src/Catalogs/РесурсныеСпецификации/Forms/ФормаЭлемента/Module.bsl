	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("ТабличнаяЧасть",        ТабличнаяЧасть);
	Запрос.УстановитьПараметр("ПроизводствоНаСтороне", ДанныеПервогоЭтапа.ПроизводствоНаСтороне);
	
