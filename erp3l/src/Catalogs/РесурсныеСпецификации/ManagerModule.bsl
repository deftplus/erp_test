						НоваяСтрока.Владелец = Объект.Владелец;
					//-- НЕ УТКА
					
					КонецЕсли;
					
				КонецЕсли;
			
			КонецЦикла;
			
		КонецЕсли;
		
		Запрос.УстановитьПараметр("РесурснаяСпецификация", ДополнительныеПараметры.РесурснаяСпецификация);
		Запрос.УстановитьПараметр("ДанныеЭтаповКэш",       ДанныеЭтаповКэш);
