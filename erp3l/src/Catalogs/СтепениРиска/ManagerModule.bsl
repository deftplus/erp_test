Процедура ОбработкаПолученияДанныхВыбора(ДанныеВыбора, Параметры, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	
	ДанныеВыбора = Новый СписокЗначений;
	// Получим назначение степени риска из структуры отборов для передачи в запрос.
	НазначениеСтепениРиска = Перечисления.НазначенияСтепениРиска.КлассификацияКонтрагентов;
	
	Запрос = Новый Запрос(
	"ВЫБРАТЬ
	|	СтепениРиска.Ссылка КАК Ссылка,
	|	ПРЕДСТАВЛЕНИЕССЫЛКИ(СтепениРиска.Ссылка) КАК Представление
	|ИЗ
	|	Справочник.СтепениРиска КАК СтепениРиска
	|ГДЕ
	|	НЕ СтепениРиска.ПометкаУдаления
	|	И СтепениРиска.УдалитьНазначениеСтепениРиска = &НазначениеСтепениРиска
	|
	|УПОРЯДОЧИТЬ ПО
	|	РеквизитДопУпорядочивания");
	
	Запрос.УстановитьПараметр("НазначениеСтепениРиска", НазначениеСтепениРиска);
	РезультатЗапроса = Запрос.Выполнить();
	
	Если НЕ РезультатЗапроса.Пустой() Тогда
		
		Выборка = РезультатЗапроса.Выбрать();
	
		Пока Выборка.Следующий() Цикл
		
			ДанныеВыбора.Добавить(Выборка.Ссылка, Выборка.Представление);
		
		КонецЦикла;
		
	КонецЕсли;

КонецПроцедуры

