
&НаКлиенте
Процедура ОткрытьСвойстваПроцесса(Команда)
	ТекДанные = Элементы.Список.ТекущиеДанные;
	Если ТекДанные <> Неопределено Тогда
		ПараметрыФормы = Новый Структура;
		ПараметрыФормы.Вставить("Ключ", ТекДанные.Ссылка);
		ОткрытьФорму("Справочник.ШаблоныУниверсальныхПроцессов.Форма.ФормаЭлемента", ПараметрыФормы, , , , , , РежимОткрытияОкнаФормы.БлокироватьОкноВладельца); 
	Иначе
		// Строка не выбрана.
	КонецЕсли;
КонецПроцедуры

&НаКлиенте
Процедура ОткрытьСписокЭтапов(Команда)
	ТекДанные = Элементы.Список.ТекущиеДанные;
	Если ТекДанные <> Неопределено Тогда
		Шаблон = ТекДанные.Ссылка;
		СтруктураПараметров = Новый Структура;
		СтруктураОтбора = Новый Структура;
		СтруктураОтбора.Вставить("Владелец", Шаблон);
		СтруктураПараметров.Вставить("Отбор", СтруктураОтбора);
		ОткрытьФорму("Справочник.ЭтапыУниверсальныхПроцессов.Форма.ФормаСписка", СтруктураПараметров);
	Иначе
		ТекстСообщения = НСтр("ru = 'Шаблон процесса не выбран. Открытие отменено.'");
		ОбщегоНазначенияУХ.СообщитьОбОшибке(ТекстСообщения);
	КонецЕсли;
КонецПроцедуры
