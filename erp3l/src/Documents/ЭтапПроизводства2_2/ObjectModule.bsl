	МассивРезультатов = Запрос.ВыполнитьПакет();
	
	Для каждого Контроль Из ИндексыКонтролей Цикл
		
		Если МассивРезультатов[Контроль.Ключ].Пустой() Тогда
			Продолжить;
		Иначе
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				Контроль.Значение, 
				ЭтотОбъект,,, 
