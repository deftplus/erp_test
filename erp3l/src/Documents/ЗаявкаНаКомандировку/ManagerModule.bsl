			КонецЕсли;
			
			// Проверяем заполненность статьи
			ПараметрыБюджета = ВстраиваниеОПККлиентСерверПереопределяемый.ПараметрыБюджета(ДанныеДокумента.ВидБюджета);
			Для Каждого ТекСтрокаРасшифровки Из ДанныеДокумента.ДвиженияОперации Цикл
				// Проверка статьи бюджета.
				Если Не ЗначениеЗаполнено(ТекСтрокаРасшифровки[ПараметрыБюджета.КолонкаСтатья]) Тогда
					
					ПроверкаПройдена = Ложь;
					ТекстОшибки = ОбщегоНазначенияКлиентСервер.ТекстОшибкиЗаполнения(
						"Колонка",
						"Заполнение", 
						ПараметрыБюджета.ЗаголовокКолонкиСтатья, 
						ТекСтрокаРасшифровки.НомерСтроки,
						НСтр("ru = 'Аналитики учета и планирования'"));
					ИмяПоля = СтрШаблон("Объект.ДвиженияОперации[%1].%2", ТекСтрокаРасшифровки.НомерСтроки - 1, ПараметрыБюджета.КолонкаСтатья);
					
					УправлениеПроцессамиСогласованияУХКлиентСервер.ДобавитьОшибкуУстановкиСтатусаОбъекта(ПротоколОшибок, ОбъектСсылка, ТекстОшибки, ИмяПоля);
					
				КонецЕсли;
				
			КонецЦикла;
			
		Иначе
			// Статья в шапке
			Если НЕ ЗначениеЗаполнено(ДанныеДокумента.СтатьяДвиженияДенежныхСредств) Тогда
				// Проверяем заполненность статьи
				ПроверкаПройдена = Ложь;
				ТекстОшибки = ОбщегоНазначенияКлиентСервер.ТекстОшибкиЗаполнения(
					"Поле",	"Заполнение", НСтр("ru = 'Статья движения денежных средств'"),,,);
				
				УправлениеПроцессамиСогласованияУХКлиентСервер.ДобавитьОшибкуУстановкиСтатусаОбъекта(
					ПротоколОшибок, ОбъектСсылка, ТекстОшибки, "Объект.СтатьяДвиженияДенежныхСредств");
			КонецЕсли;
				
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат ПроверкаПройдена;
	
КонецФункции
	
