	КассыОрганизации.Колонки.Добавить("Организация",               Новый ОписаниеТипов("СправочникСсылка.Организации"));
	КассыОрганизации.Колонки.Добавить("ОрганизацияНаименование",   ТипСтрока);
	КассыОрганизации.Колонки.Добавить("Подразделение",             БухгалтерскийУчетКлиентСерверПереопределяемый.ОписаниеТиповПодразделения());
	КассыОрганизации.Колонки.Добавить("ПодразделениеНаименование", ТипСтрока);
	КассыОрганизации.Колонки.Добавить("ПлатежныйАгент",            Новый ОписаниеТипов("Булево"));
	
	ПараметрыОтбора = Новый Структура("Субъект", ПараметрыЗаполнения.Субъект);
	ЗаполнениеФинОтчетностиВБанкиПереопределяемый.ПодготовитьСписокКасс(
		ПараметрыЗаполнения.ВсяОрганизация, ДатаНачала, ДатаОкончания, ПараметрыОтбора, КассыОрганизации);

	Для Каждого Касса Из КассыОрганизации Цикл

		Если ЗначениеЗаполнено(Касса.Подразделение) Тогда
			УточнениеНаименования = Касса.ПодразделениеНаименование;
		Иначе
			УточнениеНаименования = Касса.ОрганизацияНаименование;
		КонецЕсли;
		
		// Добавляем строку отчета.
		СтрокаОтчета = ДобавитьОтчетЗаПериод(ПараметрыЗаполнения, СтрокаНастройкиКомплекта, СоставОтчетности, ДатаНачала, ДатаОкончания);
		Если Касса.ПлатежныйАгент Тогда
			СтрокаОтчета.УточнениеНаименования = СтрШаблон(НСтр("ru = '%1 (по деятельности платежного агента)';
																|en = '%1 (by the paying agent activity)'"), УточнениеНаименования);
		Иначе
			СтрокаОтчета.УточнениеНаименования = УточнениеНаименования;
		КонецЕсли;
		СтрокаОтчета.УточнениеНаименования = СокрЛП(СтрокаОтчета.УточнениеНаименования);
		
		// Сохраним в параметрах отчета значения параметров отчета, с которым формировать книгу,
		// если они отличаются от значений по умолчанию.
		Если Касса.Организация <> ПараметрыЗаполнения.Субъект Тогда
			СтрокаПараметра                  = СоставОтчетности.ПараметрыОтчетов.Добавить();
			СтрокаПараметра.КлючСтрокиОтчета = СтрокаОтчета.КлючСтрокиОтчета;
			СтрокаПараметра.Имя              = "Организация";
			СтрокаПараметра.Значение         = Касса.Организация;
		КонецЕсли;
		
		Если ЗначениеЗаполнено(Касса.Подразделение) Тогда
			СтрокаПараметра                  = СоставОтчетности.ПараметрыОтчетов.Добавить();
			СтрокаПараметра.КлючСтрокиОтчета = СтрокаОтчета.КлючСтрокиОтчета;
			СтрокаПараметра.Имя              = "ПодразделениеОрганизации";
			СтрокаПараметра.Значение         = Касса.Подразделение;
		КонецЕсли;
		
		Если Касса.ПлатежныйАгент Тогда
			СтрокаПараметра                  = СоставОтчетности.ПараметрыОтчетов.Добавить();
			СтрокаПараметра.КлючСтрокиОтчета = СтрокаОтчета.КлючСтрокиОтчета;
			СтрокаПараметра.Имя              = "ПлатежныйАгент";
			СтрокаПараметра.Значение         = Касса.ПлатежныйАгент;
		КонецЕсли;
		
	КонецЦикла;
	
