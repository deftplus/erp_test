				НачалоВыполнения = НачалоМесяца(ИнтерфейсыВзаимодействияБРОКлиентСервер.КонецПериода(ПравилоОбъект.Периодичность,
					ПараметрыПодписания.Дата));
				ПравилоОбъект.НачалоВыполнения = ?(ЗначениеЗаполнено(ПравилоОбъект.НачалоВыполнения),
					Мин(ПравилоОбъект.НачалоВыполнения, НачалоВыполнения),
					НачалоВыполнения);
			ИначеЕсли НРег(ОписаниеКомплекта.Периодичность) = НРег("Год") Тогда
				ПравилоОбъект.Периодичность = Перечисления.Периодичность.Год;
				ПравилоОбъект.ПредставлениеПериодичности = НСтр("ru = 'Ежегодно';
																|en = 'Annually'");
				НачалоВыполнения = НачалоМесяца(ИнтерфейсыВзаимодействияБРОКлиентСервер.КонецПериода(ПравилоОбъект.Периодичность,
					ПараметрыПодписания.Дата));
				ПравилоОбъект.НачалоВыполнения = ?(ЗначениеЗаполнено(ПравилоОбъект.НачалоВыполнения),
					Мин(ПравилоОбъект.НачалоВыполнения, НачалоВыполнения),
					НачалоВыполнения);
			КонецЕсли;
			
			ПравилоОбъект.Записать();
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат РезультатОтправки;
	
