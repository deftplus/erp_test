
&НаКлиенте
Процедура ОК()
	
	Закрыть(Новый Структура("ВидСравнения,Значение", ВидСравненияЗначения, Значение));
	
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Список = Элементы.ВидСравненияЗначения.СписокВыбора;
	Список.Добавить("Равно", 			Нстр("ru = ' = Равно '"));
	Список.Добавить("Больше", 			Нстр("ru = ' > Больше '"));
	Список.Добавить("БольшеИлиРавно", 	Нстр("ru = ' >= Больше или равно '"));
	Список.Добавить("Меньше", 			Нстр("ru = ' < Меньше '"));
	Список.Добавить("МеньшеИлиРавно", 	Нстр("ru = ' <= Меньше или равно '"));
	Список.Добавить("НеРавно", 			Нстр("ru = ' <> Не равно '"));
	
	ВидСравненияЗначения = "Больше";
	
КонецПроцедуры