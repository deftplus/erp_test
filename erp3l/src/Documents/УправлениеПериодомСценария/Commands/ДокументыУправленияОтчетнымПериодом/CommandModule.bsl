
&НаКлиенте
Процедура ОбработкаКоманды(ПараметрКоманды, ПараметрыВыполненияКоманды)
	
	Если (ТипЗнч(ПараметрКоманды) <> Тип("Массив")) Или (ПараметрКоманды.Количество() = 0) Тогда
		Отбор = Новый Структура;
	ИначеЕсли ТипЗнч(ПараметрКоманды[0]) = Тип("СправочникСсылка.Периоды") Тогда
		Отбор = Новый Структура("ПериодСценария", ПараметрКоманды);
	ИначеЕсли ТипЗнч(ПараметрКоманды[0]) = Тип("СправочникСсылка.Сценарии") Тогда
		Отбор = Новый Структура("Сценарий", ПараметрКоманды);
	ИначеЕсли ТипЗнч(ПараметрКоманды[0]) = Тип("СправочникСсылка.ВерсииРегламентовПодготовкиОтчетности") Тогда
		Отбор = Новый Структура("ВерсияОрганизационнойСтруктуры", ПараметрКоманды);
	Иначе 
		Отбор = Новый Структура;	
	КонецЕсли;
	
	ПараметрыФормы = Новый Структура("Отбор", Отбор);
	
	ОткрытьФорму("Документ.УправлениеПериодомСценария.ФормаСписка", 
					ПараметрыФормы, 
					ПараметрыВыполненияКоманды.Источник, 
					ПараметрыВыполненияКоманды.Уникальность, 
					ПараметрыВыполненияКоманды.Окно, 
					ПараметрыВыполненияКоманды.НавигационнаяСсылка);
					
КонецПроцедуры
