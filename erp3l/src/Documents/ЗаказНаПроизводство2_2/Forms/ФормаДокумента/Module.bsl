&НаКлиенте
Процедура ОткрытьСтруктуруЗаказа()
	
	Заказы = Новый Массив;
	Заказы.Добавить(Объект.Ссылка);
	
	ПараметрыФормы = Новый Структура("Заказы", Заказы);
	
	ОткрытьФорму(
		"Отчет.СтруктураЗаказаНаПроизводство2_2.Форма.СтруктураЗаказа",
		ПараметрыФормы,
		,
		Объект.Ссылка);
	
КонецПроцедуры

